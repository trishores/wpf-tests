<Window x:Class="Swagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tests" Height="500" Width="800" MinHeight="500" MinWidth="800" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
    </Window.Resources>

    <Border BorderThickness="1" BorderBrush="Gray" Margin="100,100,100,100">
        <Grid Name="Grid" Margin="0" Background="Beige"
              AllowDrop="False" PreviewDragEnter="Grid_DragEnter" PreviewDragLeave="Grid_DragLeave" PreviewDragOver="Grid_DragOver">

            <TextBox Name="Text" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="400" Height="100"
                     PreviewDragEnter="Text_DragEnter" PreviewDragLeave="Text_DragLeave" PreviewDragOver="Text_DragOver"/>

        </Grid>
    </Border>
</Window>
